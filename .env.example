# ========================================
# Configuration de base (OBLIGATOIRE)
# ========================================

# Base de données PostgreSQL (hébergée sur NUC)
# IMPORTANT: Utilisez le script de création automatique
# 1. Configurez .env.nuc avec l'IP de votre NUC
# 2. Lancez: ./scripts/create-database.sh mon-projet dev
# 3. L'URL sera automatiquement générée et ajoutée ici
DATABASE_URL="postgresql://user_generated:password_generated@nuc_ip:5432/projet-dev"

# NextAuth.js - Authentification
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# ========================================
# Authentification OAuth (OPTIONNEL)
# ========================================

# GitHub OAuth
# 1. Aller sur https://github.com/settings/developers
# 2. Créer une "OAuth App" avec callback: http://localhost:3000/api/auth/callback/github
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Google OAuth
# 1. Aller sur https://console.cloud.google.com/
# 2. Créer des identifiants OAuth 2.0 avec callback: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ========================================
# Configuration avancée (OPTIONNEL)
# ========================================

# Debug et logs
DEBUG=false
LOG_LEVEL=info

# Environnement
NODE_ENV="development"

# ========================================
# Configuration de l'application (DEV)
# ========================================

# Métadonnées de l'application (à personnaliser)
NEXT_PUBLIC_APP_NAME="My Project"
NEXT_PUBLIC_APP_DESCRIPTION="Description de mon projet" 
NEXT_PUBLIC_VERSION="dev"

# Variables PM2 pour déploiement (à personnaliser)
APP_NAME="mon-projet-dev"
APP_VERSION="dev"